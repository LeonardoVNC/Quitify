<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Título de la pantalla de inicio de sesión -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/LginTitulo"
        android:textSize="24sp"
        android:layout_gravity="center"
        android:paddingBottom="16dp" />

    <!-- Campo para ingresar el correo electrónico -->
    <EditText
        android:id="@+id/etEmailLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/LginCorreoElec"
        android:inputType="textEmailAddress" />

    <!-- Campo para ingresar la contraseña -->
    <EditText
        android:id="@+id/etPasswordLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/LginContraseña"
        android:inputType="textPassword" />

    <!-- Botón para iniciar sesión -->
    <Button
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/LginTitulo"
        android:layout_marginTop="16dp" />

    <!-- Texto con redirección a la pantalla de registro -->
    <TextView
        android:id="@+id/tvRegisterRedirect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/LginRegisterRedirect"
        android:textColor="@android:color/holo_blue_light"
        android:layout_gravity="center"
        android:layout_marginTop="8dp" />
</LinearLayout>